<h2>List developers</h2>
<%= form_for  @developer_search_form, url: developers_path, method: :get, html: { class: "form-inline"}  do |f| %>
  <div class="form-group">
    <%= f.label "Language: " %>
    <%= f.select(:language_id, Language.pluck(:code, :id), { include_blank: '-------'}, {class:"form-control"} ) %>
  </div>
  <div class="form-group">
    <%= f.label "Programing: " %>
    <%= f.select(:programming_language_id, ProgrammingLanguage.pluck(:name, :id), { include_blank: '-------' },{ class: 'form-control'}) %>
  </div>
  <%= f.submit "Search", {class:"btn btn-success", style:'margin-left:10px'} %>
<% end %>
<br>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Email</th>
          <th>Language </th>
          <th> Programing language </th>
        </tr>
      </thead>

      <tbody>
        <% @developers.each do |developer| %>
          <tr>
            <td><%= developer.email %></td>
            <td><%= developer.languages.pluck(:code).join(",") %></td>
            <td><%= developer.programming_languages.pluck(:name).join(",") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
